# ColorMagic Backend Environment Variables - 用户认证系统

# ==================== 应用配置 ====================
NODE_ENV=development
PORT=3001

# ==================== 数据库配置 ====================
USE_DATABASE=true

# PostgreSQL总系统连接配置
DB_HOST=postgres_master
DB_PORT=5432
DB_NAME=postgres
DB_USER=colormagic_user
DB_PASSWORD=colormagic_secure_pass_2024
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# ==================== 认证配置 ====================
# JWT密钥（请使用强密码）
JWT_SECRET=colormagic-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== API配置 ====================
# AI功能已移除，专注于核心颜色分析功能

# ==================== 缓存配置 ====================
# Redis配置（可选）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== 邮件配置 ====================
# SMTP邮件服务配置（用于邮箱验证和密码重置）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 邮件发送者信息
EMAIL_FROM=ColorMagic <noreply@colormagic.com>
EMAIL_FROM_NAME=ColorMagic

# ==================== 第三方登录配置 ====================
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3001/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# ==================== 安全配置 ====================
# CORS允许的源
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 密码重置token过期时间（小时）
PASSWORD_RESET_EXPIRES_HOURS=24

# 邮箱验证token过期时间（小时）
EMAIL_VERIFICATION_EXPIRES_HOURS=24

# 会话超时时间（分钟）
SESSION_TIMEOUT_MINUTES=30

# ==================== 文件上传配置 ====================
# 上传文件大小限制（MB）
MAX_FILE_SIZE_MB=10

# 上传文件存储路径
UPLOAD_DIR=uploads

# ==================== 日志配置 ====================
# 日志级别
LOG_LEVEL=info

# 日志文件路径
LOG_FILE=logs/app.log

# ==================== 监控配置 ====================
# 启用性能监控
ENABLE_MONITORING=true

# APM配置（可选）
APM_SERVER_URL=
APM_SECRET_TOKEN=

# ==================== 开发配置 ====================
# 开发模式下的特殊配置
DEBUG_SQL=false
ENABLE_SWAGGER=true

# Mock数据配置
USE_MOCK_DATA=false

# ==================== 生产环境配置 ====================
# 生产环境特殊配置（当NODE_ENV=production时生效）

# 数据库连接池配置
PROD_DB_MAX_CONNECTIONS=50
PROD_DB_IDLE_TIMEOUT=60000

# 缓存配置
PROD_CACHE_TTL=3600

# 安全配置
PROD_RATE_LIMIT_MAX=1000
PROD_RATE_LIMIT_WINDOW=900000

# ==================== 时区配置 ====================
TZ=America/New_York
